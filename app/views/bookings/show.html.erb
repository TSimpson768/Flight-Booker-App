<div class="body-container">
  <h1>Your flight has been booked!</h1>
  <h2><%= @booking.flight.departure_airport.name %> to <%= @booking.flight.arrival_airport.name %></h2>
  <h3>Departing <%=@booking.flight.departure_date%>, <%=@booking.flight.format_departure_time%></h3>
  <h3>Flight time: <%= @booking.flight.duration%> minutes</h3>
  
  <% @passengers.each_with_index do |passenger, i| %>
    Passenger <%= i + 1 %>: <%= passenger.first_name %> <%= passenger.last_name %> <br>
  <% end %>
</div>